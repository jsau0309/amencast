{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["esnext"],
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "/app",
    "paths": {
      "@/*": ["./lib/*"]
    },
    "noEmit": false
  },
  "include": [
    "services/ingestion-worker/src/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 